@page
@model PRN221_Project.Pages.Admin.Invoices.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Invoice.PaymentType == 1)
            {
               <div>Cash</div>
            }
            else
            {
               <div>Transfer</div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.TotalAmount)
        </dd>    
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.BankAccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.BankAccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.BankAccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.BankAccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.DateRecorded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.DateRecorded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.Account)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Account.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice.Customer.CustomerName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Invoice?.InvoiceId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
